{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-east1"
    },
    "cleanUrls": true,    
    "redirects": [
      { "source": "http://ayah-daily.web.app/**", "destination": "https://ayah-daily.web.app/:splat", "type": 301 },
      { "source": "https://www.ayah-daily.web.app/**", "destination": "https://ayah-daily.web.app/:splat", "type": 301 },
      { "source": "/en", "destination": "/", "type": 301 },
      { "source": "/en/", "destination": "/", "type": 301 }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2)",
        "headers": [
          { "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          { "key": "Cache-Control", "value": "public,max-age=60" }
        ]
      }
    ],
    "rewrites": [ { "source": "**", "destination": "/index.html" } ]
  }
}
